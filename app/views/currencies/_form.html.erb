<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @currency do |f| %>
        <% if @currency.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @currency.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control", placeholder: 'New item' %>
        </div>
        <div class="form-group">
          <%= f.label :currency_code, "Currency Code" %>
          <%= f.text_field :currency_code, class: "form-control", placeholder: 'XXX1' %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
