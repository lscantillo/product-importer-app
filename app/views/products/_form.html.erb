<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @product do |f| %>
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control", placeholder: 'New item' %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Price" %>
          <%= f.text_field :price, class: "form-control", placeholder: '10.23' %>
        </div>
        <div class="form-group">
          <%= f.label :expiration, "Expiration" %>
          <%= f.text_field :expiration, class: "form-control", placeholder: 'Here goes the description...' %>
        </div>
        <div class="form-group">
          <%= f.label :currency_id, "Currency" %>
          <%= f.collection_select :currency_id, Currency.all, :id, :currency_code, prompt: true, class: "dropdown-menu" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
